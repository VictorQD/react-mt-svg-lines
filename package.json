{
  "name": "react-mt-svg-lines",
  "description": "A React component to animate the line stroke in SVGs",
  "keywords": [
    "react-component",
    "react",
    "svg",
    "animate",
    "line",
    "path",
    "stroke"
  ],
  "author": "Peter Morawiec",
  "version": "0.4.5",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/moarwick/react-mt-svg-lines"
  },
  "bugs": "https://github.com/moarwick/react-mt-svg-lines/issues",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --content-base src/demos/",
    "build": "rimraf public && node_modules/webpack/bin/webpack.js --progress --profile --colors",
    "dist": "node_modules/webpack/bin/webpack.js --config webpack.dist.js",
    "prepublish": "npm run dist"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "quotes": [
        2,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "react/jsx-key": 1,
      "react/jsx-uses-react": 1,
      "react/no-string-refs": 1,
      "react/prefer-es6-class": 1,
      "react/react-in-jsx-scope": 1
    },
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
      "jsx": true
    },
    "globals": {
      "describe": true,
      "expect": true,
      "it": true
    },
    "plugins": [
      "react"
    ]
  },
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "babel-core": "6.9.0",
    "babel-eslint": "6.0.4",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "chai": "3.5.0",
    "css-loader": "0.23.1",
    "eslint-plugin-react": "5.1.1",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "html-webpack-plugin": "2.17.0",
    "mocha": "2.5.2",
    "node-sass": "3.7.0",
    "postcss-loader": "0.9.1",
    "react-hot-loader": "1.3.0",
    "rimraf": "2.5.2",
    "sass-loader": "3.2.0",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1",
    "webpack-merge": "0.13.0",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "tween.js": "16.3.4"
  }
}
